# =============================================================================
# TEMPLATE DE SEGREDOS DA API (APLICAR EM .env LOCAL)
# =============================================================================
# Este arquivo lista variáveis sensíveis que possuem placeholders vazios
# em docker-compose.yml. Substitua pelos valores reais via cofre (GitHub
# Secrets, Vault, etc.) antes de executar a API localmente.

# =============================================================================
# CONFIGURAÇÃO BÁSICA E MENSAGENS
# =============================================================================
PORT=3333
NODE_ENV=production
API_BASE_URL=http://localhost:3333
MESSAGE_PREFIX=MSG-
SUCCESS_MESSAGE=Notification registered successfully
FILE_HISTORY_METADATA_FILE_NAME=file-history-metadata.json
FILE_HISTORY_STORAGE_DIR=/app/storage/file-history
FILE_HISTORY_UPLOADS_DIR=/app/storage/uploads
FILE_HISTORY_CACHE_TTL=60000
FILE_HISTORY_DEFAULT_PAGE_SIZE=10
FILE_HISTORY_MAX_PAGE_SIZE=100
UPLOAD_METADATA_STORAGE_DIR=/app/storage/metadata
FILES_PUBLIC_URL=http://localhost:3333/uploads
OPENAI_SERVICE_DISABLED_MESSAGE=OpenAI integration disabled in this environment
AUTHORIZED_DOMAINS=

# =============================================================================
# RATE LIMITING E CONFIGURAÇÃO DO NGINX
# =============================================================================
NGINX_PORT=8080
NGINX_RATE_LIMIT_LLM=1r/m
NGINX_BURST_LLM=5
NGINX_RATE_LIMIT_GENERAL=10r/m
NGINX_BURST_GENERAL=20
OPENAI_RATE_LIMIT=1r/m
DIAGNOSTICS_API_INTERNAL_PORT=3334

# =============================================================================
# AUTENTICAÇÃO MOCK / USUÁRIOS PADRÃO
# =============================================================================
JWT_SECRET_MOCK=mock-jwt-secret
TOKEN_EXPIRATION_SECONDS=3600
DEMO_USER_EMAIL=demo@example.com
DEMO_USER_NAME=Demo User
DEMO_USER_PICTURE=https://via.placeholder.com/40
ADMIN_USER_EMAIL=admin@example.com
ADMIN_USER_NAME=Admin User
ADMIN_USER_PICTURE=https://via.placeholder.com/40
TEST_USER_EMAIL=test@example.com
TEST_USER_NAME=Test User
TEST_USER_PICTURE=https://via.placeholder.com/40

# =============================================================================
# OPENROUTER / OPENAI
# =============================================================================
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1/chat/completions
OPENROUTER_PDF_MODEL=anthropic/claude-sonnet-4
OPENROUTER_PDF_ENGINE=mistral-ocr
OPENROUTER_COOKIE=
OPENROUTER_HTTP_REFERER=https://your-app-url.example
OPENROUTER_APP_TITLE=Your App Name
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# GOOGLE CLOUD / GMAIL
# =============================================================================
GOOGLE_APPLICATION_CREDENTIALS=./path/to/your/google-credentials.json
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost
GOOGLE_REFRESH_TOKEN=your_google_refresh_token_here
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id_here
